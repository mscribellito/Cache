@model Cache.Models.Firearm

@using Cache.Models

<div class="form-group row">
    <label asp-for="ManufacturerImporter" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="ManufacturerImporter" class="form-control" />
        <span asp-validation-for="ManufacturerImporter" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Model" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="SerialNumber" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="SerialNumber" class="form-control" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Type" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<Cache.Models.Type>()">
            <option selected="selected" value=""></option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="CaliberGauge" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <select asp-for="CaliberGaugeId" class ="form-control" asp-items="ViewBag.CaliberGaugeId">
            <option selected="selected" value=""></option>
        </select>
        <span asp-validation-for="CaliberGauge" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Cost" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="DateAcquired" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="DateAcquired" class="form-control" />
        <span asp-validation-for="DateAcquired" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="PurchaseLocation" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <textarea asp-for="PurchaseLocation" class="form-control" rows="3"></textarea>
        <span asp-validation-for="PurchaseLocation" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Status" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<Cache.Models.Status>()">
            <option selected="selected" value=""></option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="DateSold" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <input asp-for="DateSold" class="form-control" />
        <span asp-validation-for="DateSold" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="SoldTransferredTo" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <textarea asp-for="SoldTransferredTo" class="form-control" rows="3"></textarea>
        <span asp-validation-for="SoldTransferredTo" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Notes" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
        <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
</div>
