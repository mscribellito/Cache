@page "{id}"
@model Cache.Pages.Firearms.DeleteModel

@{
    ViewData["Title"] = "Delete Firearm";
}

<h1>Delete Firearm</h1>

<div>
    <partial name="_Detail" model="@Model.Firearm" />

    <p>Are you sure you want to delete this?</p>
    
    <form method="post">
        <input type="hidden" asp-for="Firearm.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
    </form>
</div>
