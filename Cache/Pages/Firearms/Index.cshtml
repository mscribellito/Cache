@page
@model Cache.Pages.Firearms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Firearms</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].ManufacturerImporter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].CaliberGauge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Firearm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerImporter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaliberGauge.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
